{
  "name": "hyperhtml",
  "version": "1.12.1",
  "description": "A Fast & Light Virtual DOM Alternative",
  "browser": "min.js",
  "homepage": "https://viperhtml.js.org/hyper.html",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "postbuild": "npm run minify",
    "dev": "rollup -c -w",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "ie": "babel ./test/test.js --out-dir ./test/ie --presets=es2015",
    "minify": "uglifyjs index.js --comments=\"/^!/\" --compress --mangle -o min.js",
    "size": "cat index.js | wc -c;cat min.js | wc -c;gzip -c min.js | wc -c",
    "test": "istanbul cover test/runner.js",
    "prepare": "patch-package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebReflection/hyperhtml.git"
  },
  "keywords": [
    "dom",
    "template",
    "fast",
    "performance",
    "diff"
  ],
  "author": "Andrea Giammarchi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WebReflection/hyperhtml/issues"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-es2015": "^6.22.0",
    "chai": "^4.1.2",
    "coveralls": "^2.13.1",
    "eslint": "^4.8.0",
    "istanbul": "^0.4.5",
    "jsdom": "^9.12.0",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "majinbuu": "^1.1.0",
    "mocha": "^4.0.1",
    "patch-package": "^3.5.1",
    "prettier": "^1.7.4",
    "rollup": "^0.50.0",
    "tressa": "^0.3.1",
    "uglify-js": "^2.8.5"
  }
}
